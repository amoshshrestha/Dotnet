@model IEnumerable<CategoryModel>

@{
    ViewData["Title"] = "Categories";
    int count = 1;
}

<h1>Categories</h1>

<a class="btn btn-success" asp-controller="Category" asp-action="PostCategory"  >Add New Category</a>
<div>
    @TempData["success"]
</div>
<br />

<table class="table w-50 text-center m-auto" >
    <thead class="table-dark">
        <tr>
            <td>S.No.</td>
            <td colspan="2">Category Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@obj.CategoryName</td>
                <td>
                    <div class="btn-group">
                        <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id=@obj.CategoryId class="btn btn-warning">Update</a>
                        <form asp-action="DeleteCategory" asp-route-id=@obj.CategoryId method="post">
                        <button class="btn btn-danger" onclick="return confirm('Are you Sure?')">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    toastr.success(TempData["Success"])
</script>